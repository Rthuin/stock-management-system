@{
    ViewData["Title"] = "Registration Successful";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .container-fluid {
            padding: 50px 0;
        }

        .info-box {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

            .info-box h1 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .info-box p {
                font-size: 16px;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="info-box text-center">
                    <h1>Registration Successful</h1>
                    <p>Your registration has been submitted successfully.</p>
                    <p>Please wait for admin approval to activate your account.</p>
                    <p>You will receive an email notification once your account is approved.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Go to Homepage</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
