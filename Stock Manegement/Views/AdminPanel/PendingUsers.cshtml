@model List<EntityLayer.Concrete.User>

@{
    ViewData["Title"] = "Onay Bekleyen Kullanıcılar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-container">
    <h2 class="text-center mb-4">Onay Bekleyen Kullanıcılar</h2>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Ad Soyad</th>
                <th scope="col">Email</th>
                <th scope="col">Onay Durumu</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.UserEmail</td>
                    <td>@(user.IsApproved ? "Onaylandı" : "Onay Bekliyor")</td>
                    <td>
                        @if (!user.IsApproved)
                        {
                            <form asp-controller="AdminPanel" asp-action="ApprovedUser" method="post">
                                <input type="hidden" name="userId" value="@user.UserID" />
                                <button type="submit" class="btn btn-primary">Onayla</button>
                                <a asp-controller="AdminPanel" asp-action="DeletePendingUsers" asp-route-userId="@user.UserID" class="btn btn-danger">Sil</a>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-4">@TempData["Message"]</div>
}
