@model List<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "ShowProducts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-container">
    <h2 class="text-center mb-4">ShowStocks</h2>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>

                <th>Urun ID</th>
                <th>Urun Kodu</th>
                <th>Urun Adi</th>
                
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.ProductID</td>
                    <td>@item.ProductCode</td>
                    <td>@item.ProductName</td>
                   
                    <td>
                        <a asp-controller="AdminProduct" asp-action="RemoveProduct" asp-route-productId="@item.ProductID" class="btn btn-danger">Sil</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-4">@TempData["Message"]</div>
}